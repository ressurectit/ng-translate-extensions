{
    "name": "ng2-external-translation-loader",
    "version": "1.0.0",
    "description": "Angular 2 module - external translation loader for ng2-translate",
    "scripts":
    {
        "prebuild": "typings install",
        "build": "npm run tsc",
        "clean": "rimraf ./*.d.ts ./*.js ./*.map ./*.log ./bundle",
        "clean:deps": "rimraf ./node_modules ./typings",
        "clean:all": "npm run clean && npm run clean:deps",
        "tsc": "tsc",
        "tsc:w": "tsc -w --sourceMap",
        "tsc:debug": "tsc --sourceMap",
        "prepublish": "npm run bundle:package",
        "postpublish": "npm run clean",
        "bundle": "tsc --outFile bundle/ng2-external-translation-loader.dev.js",
        "bundle:update": "nab bundle/ng2-external-translation-loader.dev.js && uglifyjs -o bundle/ng2-external-translation-loader.min.js -- bundle/ng2-external-translation-loader.dev.js",
        "bundle:package": "npm run clean && npm run build && npm run bundle && npm run bundle:update",
        "deploy-stable": "npp -b",
        "deploy-next": "npp -p -b -s \"beta\" -t \"next\""
    },
    "keywords": [
        "angular2",
        "ng2",
        "translate",
        "external",
        "loader"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "dependencies":
    {
        "angular2": "2.0.0-beta.8",
        "es6-promise": "^3.0.2",
        "es6-shim": "^0.33.3",
        "reflect-metadata": "0.1.2",
        "zone.js": "0.5.15",
        "rxjs": "5.0.0-beta.2",
        "ng2-translate": "~1.8.0",
        "ng2-common": "latest"
    },
    "devDependencies":
    {
        "rimraf": "~2.5.1",
        "typescript": "~1.8.2",
        "typings":"^0.6.8",
        "uglify-js": "~2.6.2",
        "npm-publish-package": "1.2.0",
        "npm-angular2-bundle": "1.0.0"
    }
}