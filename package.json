{
    "name": "@anglr/external-translation-loader",
    "version": "3.0.1",
    "description": "Angular module - external translation loader for ng2-translate",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "scripts":
    {
        "build": "npm run ngc",
        "clean": "rimraf dist",
        "clean:deps": "rimraf node_modules",
        "clean:all": "npm run clean && npm run clean:deps",
        "ngc": "ngc",
        "prepublish": "npm run bundle:package",
        "postpublish": "npm run clean",
        "republish": "npm publish --force",
        "bundle": "webpack",
        "bundle:min": "webpack --env.minify",
        "bundle:package": "npm run clean && npm run build && npm run bundle && npm run bundle:min",
        "deploy:stable": "npp -b",
        "deploy:next": "npp -p -b -s \"beta\" -t \"next\""
    },
    "keywords": [
        "angular",
        "ng",
        "translate",
        "external",
        "loader"
    ],
    "author": "kukjevov",
    "license": "MIT",
    "dependencies":
    {
        "@angular/core":  "^4.0.0",
        "@angular/platform-browser":  "^4.0.0",
        "@angular/http":  "^4.0.0",
        "core-js": "~2.4.1",
        "zone.js": "^0.8.5",
        "rxjs": "^5.2.0",
        "@ngx-translate/core": "^6.0.1",
        "@anglr/common": "^3.0.0"
    },
    "devDependencies":
    {
        "@angular/compiler-cli": "^4.0.0",
        "@angular/compiler": "^4.0.0",
        "rimraf": "~2.6.1",
        "typescript": "2.2.1",
        "webpack": "2.3.2",
        "npm-publish-package": "~1.2.0"
    }
}